{
  "name": "nestjs-typeorm-fastify",
  "version": "0.0.0",
  "description": "Transactional decorator for TypeORM based on Fastify request context which simplifies work transactions",
  "main": "dist/index.js",
  "keywords": [
    "nestjs",
    "typeorm",
    "fastify",
    "transaction",
    "typescript"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint 'lib/**/*.ts' --fix",
    "test": "jest --runInBand --passWithNoTests",
    "test:ci": "npm run test -- --ci --reporters=default --reporters=jest-junit",
    "test:e2e": "jest --config ./tests/jest-e2e.json --runInBand",
    "test:e2e:ci": "npm run test:e2e -- --ci --reporters=default --reporters=jest-junit",
    "test:e2e:dev": "jest --config ./tests/jest-e2e.json --runInBand --watch",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p-fedyukovich/nestjs-typeorm-als.git"
  },
  "author": "Pavel Fediukovich <pavel.fedyukovich@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/p-fedyukovich/nestjs-typeorm-als/issues"
  },
  "homepage": "https://github.com/p-fedyukovich/nestjs-typeorm-als#readme",
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=12.17.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "jest-junit": {
    "outputDirectory": "./reports/junit/",
    "uniqueOutputName": true
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-angular": "12.1.4",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-fastify": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@nestjs/typeorm": "^8.0.0",
    "@types/jest": "^27.0.1",
    "@types/node": "12.20.15",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "6.0.0",
    "jest": "^27.0.6",
    "jest-junit": "^12.2.0",
    "lint-staged": "11.0.0",
    "pg": "^8.7.1",
    "prettier": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "sinon": "^11.1.2",
    "ts-jest": "^27.0.3",
    "typeorm": "^0.2.37",
    "typescript": "^4.3.5",
    "uuid": "8.3.2"
  },
  "peerDependencies": {
    "@nestjs/common": ">=7.0.0",
    "reflect-metadata": ">=0.1.12",
    "rxjs": ">=6.0.0",
    "typeorm": ">= 0.2.8"
  }
}
